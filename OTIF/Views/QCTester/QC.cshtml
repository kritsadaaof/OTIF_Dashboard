
@{
    ViewBag.Title = "QCTester";
}

@Scripts.Render("~/QCTester/js")

<link href="~/Content/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/datatables.min.js"></script>
<script src="~/Scripts/moment.js" temp_src="moment.js"></script>
<script>

</script>


<div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
    <div class="row text-center">
        <h3>เลือกรายการ</h3>
        <i style="color:red">(เลือกรายการเพื่อ ตรวจสอบ)</i>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mg-t-10 text-center">
            <button id="Start" type="button" class="btn btn-success notika-btn-success btn-default buttonMoveQC">ดึง</button>
            <button id="End" type="button" class="btn btn-success notika-btn-success btn-default buttonMoveQC">คืน</button>
        </div>
    </div>



    <div id="Show_Move" class="row text-center" style="">
        <div class="" style="">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-left">
                <div class="form-element-list">
                    <input type="time" id="Time_Actual" class="form-control hidden">

                    <h4 id="Status" style="color:brown" class="text-center"></h4>
                    <div class="row">
                        <div class="col-lg-12 col-md-4 col-sm-3 col-xs-2">
                        </div>
                        <div class="col-lg-12 col-md-4 col-sm-6 col-xs-8">
                            <div class="col-lg-1">
                            </div>
                            <div class="col-lg-11">
                                <div class="form-group nk-datapk-ctm form-elet-mg">
                                    <i>บาร์โค้ด Kanban</i><i style="color:red"> **</i><i id="Data_Location" style="color:red"></i>
                                    <div class="input-group nk-int-st">
                                        <input id="Bar_Kam" type="text" class="form-control" placeholder="ยิงบาร์โค้ดKanban" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-4 col-sm-3 col-xs-2">
                        </div>
                    </div>

                    <div class="row" hidden>
                        <div class="col-lg-12 col-md-4 col-sm-3 col-xs-2">
                        </div>
                        <div class="col-lg-12 col-md-4 col-sm-6 col-xs-8">
                            <div class="col-lg-1">
                            </div>
                            <div class="col-lg-11">
                                <div class="form-group nk-datapk-ctm form-elet-mg">
                                    <i>Location</i><i style="color:red"> ** </i>  <i id="LocationDes" style="color:red"></i>
                                    <div class="input-group nk-int-st">
                                        <input id="Location" type="text" class="form-control" placeholder="กรอกข้อมูล Location" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-4 col-sm-3 col-xs-2">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-4 col-sm-3 col-xs-2">
                        </div>
                        <div class="col-lg-12 col-md-4 col-sm-6 col-xs-8">
                            <div class="col-lg-1">
                            </div>
                            <div class="col-lg-11">
                                <div class="form-group nk-datapk-ctm form-elet-mg">
                                    <i>ผู้บันทึก</i><i style="color:red"> **</i>
                                    <div class="input-group nk-int-st">
                                        <input id="User" type="text" class="form-control" placeholder="กรอกรหัสผู้บันทึก" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-4 col-sm-3 col-xs-2">
                        </div>
                    </div>
                    <div class="row" id="QCCheck" style="display:none">
                        <div class="col-lg-12 col-md-4 col-sm-3 col-xs-2">
                        </div>
                        <div class="col-lg-12 col-md-4 col-sm-6 col-xs-8">
                            <div class="col-lg-1">
                            </div>
                            <div class="col-lg-11">
                                <input id="CheckboxP1" type="checkbox" /> <i style="color:red"> ไม่ผ่าน</i>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-4 col-sm-3 col-xs-2">
                        </div>
                    </div>

                    <div class="row" id="Show_Detail" style="display:none">
                        <div class="row text-center">
                            <h4 id="Status" style="color:brown"></h4>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-3 col-xs-2">
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-5">
                            <div class="form-group nk-datapk-ctm form-elet-mg">
                                <i>บาร์โค้ด Kanban</i>
                                <div class="input-group  nk-int-st" style="color:blue">
                                    <i>- </i><i id="Bar_Kam_De"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-5">
                            <div class="form-group nk-datapk-ctm form-elet-mg">
                                <i>ความยาว </i>
                                <div class="input-group  nk-int-st" style="color:blue">
                                    <i>- </i><i id="QTY_De"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-0">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mg-t-10 text-center">
                <a id="Save" class="btn btn-success notika-btn-success btn-default">บันทึก</a>
                <a href="@Url.Action("QC", new {})" id="Clear" class="btn btn-success notika-btn-success btn-default">Clear</a>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">

    <div class="row text-center">
        <h3>รายการ QA ดึงเพื่อตรวจสอบ</h3>
        <i style="color:red" hidden>(เลือกรายการเพื่อ ตรวจสอบ)</i>
    </div>

    <div class="table-responsive">
        <table id="data-table-basic" class="table table-striped">
            <thead>
                <tr>

                    <th>เวลาเหลือ</th>
                    <th>เครื่อง</th>
                    <th>Tag</th>
                    <th>SO/PO</th>
                    <th>ความยาวแผน</th>
                    <th>ความยาวจริง</th>
                    <th>น้ำหนักสาย</th>
                    <!--  <th>เวลาเริ่มผลิต</th>
                    <th>แผนผลิตเสร็จ</th> -->
                    <th>Base</th>
                    <th>สถานะ</th>

                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" hidden>

    <div class="row text-center">
        <h3>รายการกำลังจะออกจากผลิต</h3>
        <i style="color:red" hidden>(เลือกรายการเพื่อ ตรวจสอบ)</i>
    </div>

</div>
