                                    <th colspan="2" class="text-nowrap" style="border-top:none;">
                                        <input type="checkbox" id="Point4"> m.
                                        <input type="checkbox" id="Point5"> kg.
                                        <input type="checkbox" id="Point6"> coil.
                                    </th>
                                </tr>
